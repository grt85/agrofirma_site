  <main>
    <h1>üì¨ –ü–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è –∑ —Ñ–æ—Ä–º–∏ –∑–≤–æ—Ä–æ—Ç–Ω–æ–≥–æ –∑–≤‚Äô—è–∑–∫—É</h1>

    <form method="GET" action="/admin" class="filter-form">
      <input type="date" name="from" value="<%= from %>" />
      <input type="date" name="to" value="<%= to %>" />
      <input type="hidden" name="page" value="1" />
      <button type="submit">üîç –§—ñ–ª—å—Ç—Ä—É–≤–∞—Ç–∏</button>
    </form>

    <input type="text" id="searchInput" oninput="filterTable()" placeholder="üîç –ü–æ—à—É–∫ –∑–∞ email..." />
    <a class="button" href="/api/export-csv?page=<%= page %>&<%= queryParams %>">üì§ –ï–∫—Å–ø–æ—Ä—Ç—É–≤–∞—Ç–∏ CSV</a>

    <p>–í—Å—å–æ–≥–æ –ø–æ–≤—ñ–¥–æ–º–ª–µ–Ω—å: <%= totalMessages %></p>

    <% if (pageData.length === 0) { %>
      <p>–ù–µ–º–∞—î –ø–æ–≤—ñ–¥–æ–º–ª–µ–Ω—å –¥–ª—è –≤—ñ–¥–æ–±—Ä–∞–∂–µ–Ω–Ω—è.</p>
    <% } else { %>
      <form id="bulkDeleteForm" method="POST" action="/admin/delete-selected">
        <button type="submit">üóë –í–∏–¥–∞–ª–∏—Ç–∏ –≤–∏–±—Ä–∞–Ω—ñ</button>
        <table>
          <thead>
            <tr>
              <th><input type="checkbox" onclick="toggleAll(this)"></th>
              <th onclick="sortTable(1)">–î–∞—Ç–∞ ‚¨ç</th>
              <th onclick="sortTable(2)">–Ü–º‚Äô—è ‚¨ç</th>
              <th onclick="sortTable(3)">–¢–µ–ª–µ—Ñ–æ–Ω ‚¨ç</th>
              <th onclick="sortTable(4)">Email ‚¨ç</th>
              <th>–ü–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è</th>
            </tr>
          </thead>
          <tbody>
            <% pageData.forEach(entry => { %>
              <tr>
                <td><input type="checkbox" name="selectedIds" value="<%= entry.id %>"></td>
                <td data-label="–î–∞—Ç–∞"><%= new Date(entry.timestamp).toLocaleString() %></td>
                <td data-label="–Ü–º‚Äô—è"><%= entry.name %></td>
                <td data-label="–¢–µ–ª–µ—Ñ–æ–Ω"><%= entry.phone %></td>
                <td data-label="Email"><%= entry.email %></td>
                <td data-label="–ü–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è">
                  <button type="button" class="view-message"
                    data-message="<%= entry.message.replace(/"/g, '&quot;').replace(/</g, '&lt;').replace(/>/g, '&gt;') %>">
                    üìñ –ü–µ—Ä–µ–≥–ª—è–Ω—É—Ç–∏
                  </button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </form>
    <% } %>

    <div class="pagination">
      <% if (page > 1) { %>
        <a href="/admin?page=<%= page - 1 %>&<%= queryParams %>">‚¨ÖÔ∏è –ü–æ–ø–µ—Ä–µ–¥–Ω—è</a>
      <% } %>
      <% if (page < totalPages) { %>
        <a href="/admin?page=<%= page + 1 %>&<%= queryParams %>">–ù–∞—Å—Ç—É–ø–Ω–∞ ‚û°Ô∏è</a>
      <% } %>
      <span>–°—Ç–æ—Ä—ñ–Ω–∫–∞ <%= page %> –∑ <%= totalPages %></span>
    </div>
  </main>

  <div id="modal" class="modal hidden" onclick="closeModal()">
    <div class="modal-content" onclick="event.stopPropagation()">
      <h2>–ü–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è</h2>
      <p id="modalText"></p>
      <button onclick="closeModal()">–ó–∞–∫—Ä–∏—Ç–∏</button>
    </div>
  </div>

  <script>
    function toggleMenu() {
      document.getElementById('menu').classList.toggle('hidden');
    }

    function filterTable() {
      const input = document.getElementById('searchInput').value.toLowerCase();
      document.querySelectorAll('tbody tr').forEach(row => {
        const emailCell = row.querySelector('[data-label="Email"]');
        const email = emailCell ? emailCell.textContent.toLowerCase() : '';
        row.style.display = email.includes(input) ? '' : 'none';
      });
    }

    function toggleAll(source) {
      document.querySelectorAll('input[name="selectedIds"]').forEach(cb => {
        cb.checked = source.checked;
      });
    }

    function closeModal() {
      const modal = document.getElementById('modal');
      modal.classList.remove('show');
      setTimeout(() => modal.classList.add('hidden'), 300);
    }

    function sortTable(columnIndex) {
      const tbody = document.querySelector('tbody');
      const rows = Array.from(tbody.querySelectorAll('tr'));
      const isDate = columnIndex === 1;

      rows.sort((a, b) => {
        const aText = a.children[columnIndex].textContent.trim();
        const bText = b.children[columnIndex].textContent.trim();
        return isDate
          ? new Date(aText) - new Date(bText)
          : aText.localeCompare(bText);
      });

      tbody.innerHTML = '';
      rows.forEach(row => tbody.appendChild(row));
    }

    document.getElementById('bulkDeleteForm')?.addEventListener('submit', function (e) {
      if (!confirm('–í–∏ –≤–ø–µ–≤–Ω–µ–Ω—ñ, —â–æ —Ö–æ—á–µ—Ç–µ –≤–∏–¥–∞–ª–∏—Ç–∏ –≤–∏–±—Ä–∞–Ω—ñ –ø–æ–≤—ñ–¥–æ–º–ª–µ–Ω–Ω—è?')) {
        e.preventDefault();
      }
    });

    document.addEventListener('keydown', function (e) {
      if (e.key === 'Escape') closeModal();
    });

    document.querySelectorAll('.view-message').forEach(btn => {
      btn.addEventListener('click', () => {
        const msg = btn.getAttribute('data-message');
        const modal = document.getElementById('modal');
        document.getElementById('modalText').textContent = msg;
        modal.classList.add('show');
        modal.classList.remove('hidden');
      });
    });
  </script>
</body>
</html>